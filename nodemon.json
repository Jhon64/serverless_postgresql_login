{
  "restartable": "rs",
  "ignore": [
    ".git",
    ".esbuild",
    "node_modules/*",
    "assets",
    ".vscode",
    "backup",
    "tmp"
  ],
  "verbose": true,
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "main.ts",
    "src/",
    "scripts"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,ts"
}
