{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2021",
    "types": ["node"],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist/debug",
    "baseUrl": "./",
    "paths": {
      "@functions/*": [ "functions/*" ],
      "@handlers/*": [ "handlers-sanidad/*" ],
      "@entities/*": [ "entities/*" ],
      "@helpers/*": [ "helpers/*" ],
      "@domain/*": [ "domain/*" ],
      "@utils/*": [ "domain/*" ]
    }
  },
  "include": [ "./" ],
  "exclude": [ "node_modules", "dist" ]
}